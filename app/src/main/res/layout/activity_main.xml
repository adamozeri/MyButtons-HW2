<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.buttonslibrary.CustomButton
        android:id="@+id/combinedButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Combined Button"
        app:gradient="true"
        app:gradientEnd="#f0f011"
        app:gradientStart="#00ffaa"
        app:outline="true"
        app:rounded="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <com.example.buttonslibrary.CustomButton
        android:id="@+id/outlinedButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Outlined Button"
        app:outline="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/combinedButton"
        android:layout_marginTop="20dp"
        />

    <com.example.buttonslibrary.CustomButton
        android:id="@+id/roundedButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="rounded Button"
        app:rounded="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/outlinedButton"
        android:layout_marginTop="20dp"
        android:backgroundTint="#6B84ED"/>

    <com.example.buttonslibrary.CustomButton
        android:id="@+id/gradientButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="gradient Button"
        app:gradient="true"
        app:gradientStart="#A157F8"
        app:gradientEnd="#F895E2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/roundedButton"
        android:layout_marginTop="20dp" />


</RelativeLayout>